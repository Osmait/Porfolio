---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card/index.astro";
import IntroCard from "../components/IntroCard.astro";
import ContactsCard from "../components/ContactsCard.astro";
import TimeZone from "../components/TimeZoneCard.astro";
import AboutMe from "../components/AboutMe.astro";
import Now from "../components/Now.astro";

import Projects from "../components/Projects.astro";
---

<script>
  import { stagger, spring, timeline, TimelineDefinition } from "motion";
  const cards = document.querySelectorAll(".card");

  const sequence = [
    [
      ".loaderRef",
      { opacity: 0, pointerEvents: "none" },
      { easing: "ease-out" },
    ],
    [
      cards,
      { y: ["40%", "0%"], opacity: [0, 1] },
      {
        at: "-0.1",
        duration: 0.4,
        delay: stagger(0.3),
        easing: spring({ velocity: 100, stiffness: 50, damping: 10 }),
      },
    ],
  ];

  timeline(sequence as TimelineDefinition);
</script>

<Layout
  title="Jose Saul Burgos Backend Developer"
  description="I am a passionate software development enthusiast with a specialized focus on the backend. While my professional career is in its early stages, my enthusiasm and dedication to learning and growing in the world of backend development are evident in every project I undertake."
>
  <main
    class="text-white m-auto p-2 grid gap-2 max-w-6xl overflow-hidden relative w-full sm:p-4 sm:gap-2 md:grid-cols-2 md:gap-3 md:p-6 lg:h-screen lg:grid-cols-4 lg:gap-4 lg:max-h-[800px]"
  >
    <IntroCard />
    <AboutMe />
    <ContactsCard />
    <TimeZone />
    <Projects />
  </main>
</Layout>
